@model KoszykSessionDto

@{
    ViewData["Title"] = "Twój Koszyk (Gość)";
}



<style>
    .card {
        background-color: #5a5a5a !important;
        color: #f1f1f1 !important;
        border: none;
        border-radius: 10px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
    }

    .card-header {
        background-color: #5a5a5a !important;
        color: white !important;
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
    }

    .card-body {
        background-color: #444444 !important;
        color: #f1f1f1 !important;
        padding: 1.5rem;
        border-bottom-left-radius: 10px;
        border-bottom-right-radius: 10px;
    }

    table.table {
        color: #f1f1f1;
        background-color: #6c757d;
        overflow: hidden;
    }

        table.table thead {
            background-color: #495057; 
            color: #ffc107;
        }

        table.table th,
        table.table td {
            vertical-align: middle;
            border-color: #444;
        }

    .btn-danger {
        min-width: 70px;
        font-weight: 600;
    }

    .btn-success {
        min-width: 150px;
        font-weight: 600;
    }

    p.text-center {
        font-style: italic;
        font-size: 1.2rem;
        color: #ddd;
    }
</style>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-warning alert-dismissible fade show text-center" role="alert">
        <strong>@TempData["ErrorMessage"]</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show text-center" role="alert">
        <strong>@TempData["SuccessMessage"]</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="container py-3">
    <div class="row justify-content-center">
        <div class="col-lg-10 col-md-12">
            <div class="card shadow-lg border-0">
                <div class="card-header text-center">
                    <h3 class="mb-0">Twój Koszyk (Gość)</h3>
                </div>
                <div class="card-body">

                    @if (!Model.Produkty.Any())
                    {
                        <p class="text-center">Koszyk jest pusty.</p>
                    }
                    else
                    {
                        <table class="table table-bordered align-middle mb-0">
                            <thead>
                                <tr>
                                    <th>Produkt</th>
                                    <th>Ilość</th>
                                    <th>Akcje</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Produkty)
                                {
                                    <tr>
                                        <td>@item.Nazwa</td>
                                        <td>@item.Ilosc</td>
                                        <td>
                                            <form asp-action="RemoveFromSessionBasket" asp-route-id="@item.ProduktId" method="post">
                                                <button class="btn btn-danger btn-sm">Usuń produkt</button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <div class="text-end mt-3">
                            <a asp-controller="Checkout" asp-action="Index" class="btn btn-success">
                                Złóż zamówienie
                            </a>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>
