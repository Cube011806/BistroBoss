@model BistroBoss.Models.Opinia

<div class="container mt-4">
    <div class="card bg-dark text-white shadow-lg">
        <div class="card-header border-secondary">
            <h3 class="mb-0">Dodaj opinię</h3>
        </div>
        <div class="card-body">
            <form asp-action="AddReview" method="post">
                <input type="hidden" asp-for="ZamowienieId" value="@ViewBag.ZamowienieId" />

                <div class="form-group mb-3">
                    <label asp-for="Komentarz" class="form-label">Komentarz</label>
                    <textarea asp-for="Komentarz" class="form-control bg-secondary text-white" rows="4"></textarea>
                    <span asp-validation-for="Komentarz" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Ocena" class="form-label">Ocena (1-5)</label>
                    <input type="number" asp-for="Ocena" class="form-control bg-secondary text-white" min="1" max="5" />
                    <span asp-validation-for="Ocena" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-outline-light w-100">Zapisz</button>
            </form>
        </div>
    </div>
</div>
