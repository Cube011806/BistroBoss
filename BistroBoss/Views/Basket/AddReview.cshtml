@model BistroBoss.Models.Opinia

<h3>Dodaj opinię</h3>

<form asp-action="AddReview" method="post">
    <input type="hidden" asp-for="ZamowienieId" value="@ViewBag.ZamowienieId" />
    <div class="form-group">
        <label asp-for="Komentarz">Komentarz</label>
        <textarea asp-for="Komentarz" class="form-control"></textarea>
        <span asp-validation-for="Komentarz" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Ocena">Ocena (1-5)</label>
        <input type="number" asp-for="Ocena" class="form-control" min="1" max="5" />
        <span asp-validation-for="Ocena" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Zapisz</button>
</form>
