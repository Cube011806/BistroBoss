@model BistroBoss.Models.Opinia

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-warning alert-dismissible fade show text-center" role="alert">
        <strong>@TempData["ErrorMessage"]</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show text-center" role="alert">
        <strong>@TempData["SuccessMessage"]</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<style>
    .card {
        background-color: #444444 !important;
        color: #f1f1f1 !important;
        border: none;
        border-radius: 10px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
        transition: none;
    }

    .card-header {
        background-color: #1a237e; /* Dark Blue */
        color: white !important; /* White text */
        text-align: center;
        border-radius: 10px 10px 0 0;
        border-bottom: none;
    }

    .form-label {
        color: #f1f1f1;
        font-weight: 600;
    }

    textarea.form-control, input.form-control {
        background-color: #6c757d;
        color: white;
        border: 1px solid #444;
    }

    .star-rating {
        display: flex;
        flex-direction: row-reverse;
        justify-content: flex-end;
        gap: 0.3rem;
        font-size: 2rem;
    }

        .star-rating input {
            display: none;
        }

        .star-rating label {
            color: #ccc;
            cursor: pointer;
            transition: color 0.2s;
        }

        .star-rating input:checked ~ label {
            color: #ffc107;
        }

        .star-rating label:hover,
        .star-rating label:hover ~ label {
            color: #ccc; /* no hover effect */
        }

        /* Optional: disable pointer events on label if you want to remove hover effect completely */
        .star-rating label {
            pointer-events: auto;
        }
</style>

<div class="container py-3 main">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10 col-sm-12">
            <div class="card shadow-lg border-0">
                <div class="card-header">
                    <h3 class="mb-0">Dodaj opinię</h3>
                </div>
                <div class="card-body">
                    <form asp-action="AddReview" method="post">
                        <input type="hidden" asp-for="ZamowienieId" value="@Model.ZamowienieId" />

                        <div class="form-group mb-4">
                            <label class="form-label">Ocena</label>
                            <div class="star-rating">
                                <input type="radio" id="star1" name="Ocena" value="1" @(Model.Ocena == 1 ? "checked" : "") />
                                <label for="star1">&#9733;</label>

                                <input type="radio" id="star2" name="Ocena" value="2" @(Model.Ocena == 2 ? "checked" : "") />
                                <label for="star2">&#9733;</label>

                                <input type="radio" id="star3" name="Ocena" value="3" @(Model.Ocena == 3 ? "checked" : "") />
                                <label for="star3">&#9733;</label>

                                <input type="radio" id="star4" name="Ocena" value="4" @(Model.Ocena == 4 ? "checked" : "") />
                                <label for="star4">&#9733;</label>

                                <input type="radio" id="star5" name="Ocena" value="5" @(Model.Ocena == 5 ? "checked" : "") />
                                <label for="star5">&#9733;</label>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Komentarz" class="form-label">Komentarz</label>
                            <textarea asp-for="Komentarz" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Komentarz" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-success btn-lg w-100 shadow-sm">Zapisz</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
