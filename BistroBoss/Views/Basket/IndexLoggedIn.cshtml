@model Koszyk

@{
    ViewData["Title"] = "Twój koszyk";
}

<style>
    .card {
        background-color: #5a5a5a !important;
        color: #f1f1f1 !important;
        border: none;
        border-radius: 10px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
    }

    .card-header {
        background-color: #5a5a5a !important;
        color: white !important;
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
    }

    .card-body {
        background-color: #444444 !important;
        color: #f1f1f1 !important;
        padding: 1.5rem;
        border-bottom-left-radius: 10px;
        border-bottom-right-radius: 10px;
    }

    table.table {
        color: #f1f1f1;
        background-color: #6c757d;
        overflow: hidden;
    }

        table.table thead {
            background-color: #495057;
            color: #ffc107;
        }

        table.table th,
        table.table td {
            vertical-align: middle;
            border-color: #444;
        }

    .btn-danger {
        min-width: 70px;
        font-weight: 600;
    }

    .btn-success {
        min-width: 150px;
        font-weight: 600;
    }

    p.text-center {
        font-style: italic;
        font-size: 1.2rem;
        color: #ddd;
    }
</style>

<div class="container py-3">
    <div class="row justify-content-center">
        <div class="col-lg-10 col-md-12">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white text-center">
                    <h3 class="mb-0">Twój Koszyk</h3>
                </div>
                <div class="card-body text-dark bg-white">

                    @if (!Model.KoszykProdukty.Any())
                    {
                        <p class="text-center">Koszyk jest pusty.</p>
                    }
                    else
                    {
                        <table class="table table-bordered align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Produkt</th>
                                    <th>Ilość</th>
                                    <th>Cena jednostkowa</th>
                                    <th>Łącznie</th>
                                    <th>Akcje</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.KoszykProdukty)
                                {
                                    <tr>
                                        <td>@item.Produkt.Nazwa</td>
                                        <td>@item.Ilosc</td>
                                        <td>@item.Produkt.Cena.ToString("c")</td>
                                        <td>@(item.Produkt.Cena * item.Ilosc) zł</td>
                                        <td>
                                            <form asp-action="RemoveFromBasket" asp-route-id="@item.Id" method="post">
                                                <button class="btn btn-danger btn-sm">Usuń produkt</button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                        <div class="text-end mt-3">
                            <h5><strong>Łączna cena: @Model.KoszykProdukty.Sum(p => p.Produkt.Cena * p.Ilosc).ToString("c")</strong></h5>
                        </div>
                        <div class="text-end mt-3">
                            <a asp-controller="Checkout" asp-action="Index" class="btn btn-success">
                                Złóż zamówienie
                            </a>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>